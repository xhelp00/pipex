NAME = pipex
BONUS = bonus
CC = cc
FLAGS = -g -Wall -Werror -Wextra
BOLD	:= \033[1m
RED		:= \033[31;1m
GREEN	:= \033[32;1m
RESET	:= \033[0m
OBJ = obj/main.o obj/utils.o
OBJ_BONUS = obj/utils.o obj/bonus.o obj/utils_bonus.o
LIBFT = obj/libft/libft.o
LIBFT_DIR = src/libft
NAME_H = include/pipex.h

all: $(NAME) 

$(NAME): $(LIBFT) $(OBJ) $(NAME_H) 
	$(CC) $(OBJ) $(LIBFT) -o $(NAME)
